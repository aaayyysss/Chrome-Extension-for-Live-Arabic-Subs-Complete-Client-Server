{
  "manifest_version": 3,
  "name": "Live Arabic Subs",
  "version": "1.1.0",
  "description": "Enhanced real-time subtitle translation with multiple backend support",
  
  "permissions": [
    "tabCapture",
    "activeTab", 
    "storage",
    "offscreen"
  ],
  
  "host_permissions": [
    "http://localhost:*/",
    "https://*/"
  ],
  
  "action": {

	"default_popup": "popup/connection-debugger.html",
	
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png", 
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["fonts/*", "icons/*", "utils/*"],
      "matches": ["<all_urls>"]
    }
  ]
}